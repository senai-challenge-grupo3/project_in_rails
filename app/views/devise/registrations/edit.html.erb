<div class="devise edit">
  <h2>Editar Informações</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email, required: true, label: false, autofocus: true, placeholder: "Email" %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Esperando confirmação de : <%= resource.unconfirmed_email %></p>
      <% end %>

      <%= f.input :current_password, required: true, label: false, placeholder: "Senha atual" %>
      <%= f.input :password, autocomplete: "off", required: false, label: false, placeholder: "Nova senha" %>
      <%= f.input :password_confirmation, required: false, label: false, placeholder: "Confirmar senha" %>
    </div>

    <div class="form-actions row">
      <div class="col-sm-6">
        <%= link_to "Voltar", root_path, class: "btn btn-danger btn-block" %>
      </div>
      <div class="col-sm-6">
        <button type="submit" class="btn btn-success btn-block">Salvar</button>
      </div>
    </div>
  <% end %>
  <br>
  <%= link_to "Deseja apagar sua conta?", registration_path(resource_name), data: { confirm: "Você tem certeza?" }, method: :delete %>
  <br>
  
</div>
