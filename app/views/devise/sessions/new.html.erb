<div class="row">
	<div class="col-sm-6 m-auto">
		<div class="card devise">
			<h2 class="card-header text-center">Sign in</h2>
			<div class="card-body">
				<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
				  <div class="form-inputs">
				    <%= f.input :email, required: false, label:false, placeholder: "E-mail", autofocus: true %>
				    <%= f.input :password, label:false, placeholder: "Senha", required: false %>
				  </div>

				  <div class="form-actions">
				    <%= f.button :submit, "Login" %>
				  </div>
				<% end %>
				<div class="row">
					<%= render "devise/shared/links" %>	
				</div>
			</div>
		</div>
	</div>
</div>
